{
  "builds": [
    {
      "src": "front_end/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "back_end/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "back_end/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "front_end/dist/$1"
    }
  ]
}
